@model CartAdresModel

<form id="address-list" class="cart-address-container" asp-controller="Cart" asp-action="CartAdres" method="post">
    <div class="cart-address-box">
        <div class="cart-address-left">
            <p class="cart-address-list-title">Teslimat Adresi</p>
            <div class="cart-address-list">
                @foreach (var adres in Model.Adreses)
                {
                    <div class="cart-address-item">
                        <div class="cart-address-item-radio-box">
                            <label for="@adres.AdresId">@adres.AdresTitle</label>
                            <input type="radio" name="AdresId" id="@adres.AdresId" value="@adres.AdresId" class="addressId" @(Model.SeciliAdresId == adres.AdresId ? "checked" : "")>
                        </div>
                        <div class="cart-address-item-city-box">
                            <p>@adres.AdresContent</p>
                            <p>@adres.AdresCounty / @adres.AdresCity</p>
                        </div>
                    </div>
                }
                <div class="cart-address-fatura-add">
                    <label for="fatura">Fatura Adresim Farklı Olsun</label>
                    <input type="checkbox" name="AdresFatura" value="true" id="fatura">
                </div>
                <div class="cart-address-add-box">
                    <a class="address-add-btn">Yeni Adres Ekle</a>
                    <button type="submit" class="cart-go-payment">Ödemeye İlerle</button>
                </div>
            </div>
        </div>
    
        <div class="cart-address-fatura">
            <p class="cart-address-list-title">Fatura Adresi</p>
            <div class="cart-address-list">
                @foreach (var adres in Model.Adreses)
                {
                    <div class="cart-address-item">
                        <div class="cart-address-item-radio-box fatura-input-select">
                            <label for="@adres.AdresId + 1">@adres.AdresTitle</label>
                            <input type="radio" name="AdresIdFatura" id="@adres.AdresId + 1" value="@adres.AdresId" class="addressId" @(Model.SeciliAdresId == adres.AdresId ? "checked" : "")>
                        </div>
                        <div class="cart-address-item-city-box">
                            <p>@adres.AdresContent</p>
                            <p>@adres.AdresCounty / @adres.AdresCity</p>
                        </div>
                    </div>
                }
                <div class="cart-address-add-box" id="cart-fatura-add">
                    <a class="address-add-btn">Yeni Adres Ekle</a>
                </div>
            </div>
        </div>
    </div>
</form>

