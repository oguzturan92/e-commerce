<script>
    var adresList = document.querySelector("#address-list");
    var adresNewAdd = document.querySelectorAll(".address-add-btn");
    var adresNew = document.querySelector("#address-new-form");
    var adresBackBtn = document.querySelector("#user-form-btn-geri");

    for (let a of adresNewAdd) {
        a.addEventListener("click", function () {
            adresList.style.display = "none"
            adresNew.style.display = "flex"
        });
        adresBackBtn.addEventListener("click", function () {
            adresList.style.display = "block"
            adresNew.style.display = "none"
        });
    }

    var faturaFarkli = document.querySelector("#fatura");
    var cartAdresFatura = document.querySelector(".cart-address-fatura");
    var inputs = document.querySelectorAll(".fatura-input-select input");
    console.log(inputs);

    faturaFarkli.addEventListener("click", function () {
        if (faturaFarkli.checked) {
            cartAdresFatura.style.display = "block";
            for (let a of inputs) {
                a.setAttribute("name", "AdresIdFatura");
            }
        } else {
            cartAdresFatura.style.display = "none";
            for (let a of inputs) {
                a.setAttribute("name", "");
            }
        }
    });

</script>