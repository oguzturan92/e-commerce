                    <span class="validation" asp-validation-for="AdresTitle"></span>
                    <label>Başlık *</label>
                    <input asp-for="AdresTitle" type="text">
                </div>
                <div class="user-form-item-1">
                    <span class="validation" asp-validation-for="AdresNameSurname"></span>
                    <label>Ad Soyad *</label>
