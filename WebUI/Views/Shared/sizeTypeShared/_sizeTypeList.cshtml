@model SizeTypeModel

<div class="title">
    <h2>SEÇENEK LİSTESİ</h2>
</div>
<div class="content">
    <div class="table-container">
        <div class="table-btn-ekle-box">
            <a class="table-btn-ekle" asp-controller="SizeType" asp-action="SizeTypeCreate">Ekle</a>
        </div>
        @if (Model.SizeTypes.Count() > 0)
        {
            <div class="table-container-alt">
                <table>
                    <thead>
                        <tr>
                            <th class="th-w-75">Sıra No</th>
                            <th class="th-w-auto">Ad</th>
                            <th colspan="3"></th>
                            @* <th></th> *@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SizeTypes) {
                            <tr>
                                <td class="td-w-75">
                                    <form asp-controller="SizeType" asp-action="SizeTypeList" method="post">
                                        <input type="hidden" name="SizeTypeId" value="@item.SizeTypeId">
                                        <input class="input-sort" type="number" name="SizeTypeSort" value="@item.SizeTypeSort">
                                    </form>
                                </td>
                                
                                <td class="slice">@item.SizeTypeName</td>

                                <td class="td-buton-edit">
                                    <form asp-controller="Size" asp-action="SizeList" asp-route-id="@item.SizeTypeId" method="get">
                                        <button type="submit"><img src="/img/admin-img/layer.png" alt=""></button>
                                    </form>
                                </td>

                                <td class="td-buton-edit">
                                    <form asp-controller="SizeType" asp-action="SizeTypeEdit" asp-route-id="@item.SizeTypeId" method="get">
                                        <button type="submit"><img src="/img/admin-img/pencil.png" alt=""></button>
                                    </form>
                                </td>

                                <td class="td-buton-del">
                                    <form asp-controller="SizeType" asp-action="SizeTypeDelete" asp-route-id="@item.SizeTypeId" method="post">
                                        <button type="submit" onclick="return silOnayla();"><img src="/img/admin-img/delete.png" alt=""></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        } else
        {
            <h4>Listelenecek Ana Varyasyon Bulunamadı</h4>
        }
    </div>
</div>
