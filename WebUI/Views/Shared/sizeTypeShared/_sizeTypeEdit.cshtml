@model SizeTypeModel
    
<div class="title">
    <h2>SEÇENEK DÜZENLE</h2>
</div>
<div class="content">
    <div class="form-container">
        <div class="table-btn-geri-box">
            <a class="table-btn-geri" asp-controller="SizeType" asp-action="SizeTypeList">Geri</a>
        </div>
        <form class="form-container-alt" asp-controller="SizeType" asp-action="SizeTypeEdit" method="post">
            <input type="hidden" asp-for="SizeTypeId">
            <input type="hidden" asp-for="SizeTypeSort">
            <div class="form-item-1">
                <span class="validation" asp-validation-for="SizeTypeName"></span>
                <label>Ad</label>
                <input asp-for="SizeTypeName" type="text">
            </div>
            <div class="form-btn-kaydet-box">
                <button class="form-btn-kaydet" type="submit">Kaydet</button>
            </div>
        </form>
    </div>
</div>