@model CategoryModel

<div class="title">
    <h2>KATEGORİ DÜZENLE</h2>
</div>
<div class="content">
    <div class="form-container">
        <div class="table-btn-geri-box">
            <a class="table-btn-geri" asp-controller="Category" asp-action="CategoryList">Geri</a>
        </div>
        <form class="form-container-alt" asp-controller="Category" asp-action="CategoryEdit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="CategoryId">
            <input type="hidden" asp-for="CategorySort">
            <div class="form-item-1">
                <span class="validation" asp-validation-for="CategorySeoTitle"></span>
                <label>Seo Başlık</label>
                <input asp-for="CategorySeoTitle" type="text">
            </div>
            <div class="form-item-1">
                <span class="validation" asp-validation-for="CategorySeoDescription"></span>
                <label>Seo Açıklama</label>
                <input asp-for="CategorySeoDescription" type="text">
            </div>
            <div class="form-item-1">
                <span class="validation" asp-validation-for="CategorySeoKeyword"></span>
                <label>Seo Anahtar Kelime</label>
                <input asp-for="CategorySeoKeyword" type="text">
            </div>
            <div class="form-item-1">
                <span class="validation" asp-validation-for="CategoryName"></span>
                <label>Ad *</label>
                <input asp-for="CategoryName" type="text">
            </div>
            <div class="form-item-1">
                <span class="validation" asp-validation-for="CategoryUrl"></span>
                <label>Url *</label>
                <input asp-for="CategoryUrl" type="text" placeholder="gitmek-istedigim-en-guzel-bolge">
            </div>
            <div class="form-item-1">
                <span class="validation" asp-validation-for="CategoryDescription"></span>
                <label>Açıklama</label>
                <textarea asp-for="CategoryDescription" id="CkEditor"></textarea>
            </div>
            <div class="form-item-1">
                <label class="resim-label">Resim <span class="tavsiye">(önerilen boyut: 1920 x 200)</span></label>
                <input type="hidden" asp-for="CategoryImage"> @* Validationdan sonra sayfa yenilenirse, DB'den gelen BlogImage değerini sakladık *@
                <img src="~/img/@Model.CategoryImage" alt="" class="form-img">
                <input class="resim-input" type="file" name="file">
            </div>
            <div class="form-item-3">
                <div class="form-item-1">
                    <label>Görünürlük</label>
                    <select asp-for="CategoryVisibility" class="select">
                        <option value="MenuTrue">Ana Menüde Görünsün</option>
                        <option value="MenuFalse">Ana Menüde Görünmesin</option>
                        <option value="Link">Sadece Link İle Ulaşılsın (Boş Sayfa)</option>
                    </select>
                </div>
                <div class="form-item-1">
                    <span class="validation" asp-validation-for="CategoryListType"></span>
                    <label>Listeleme Tipi</label>
                    <select asp-for="CategoryListType" class="select">
                        <option value="Urun">Ürün Listesi</option>
                        <option value="Icerik">İçerik</option>
                    </select>
                </div>
                <div class="form-item-1">
                    <label>Onay Durumu</label>
                    <select asp-for="CategoryApproval" class="select">
                        <option value="True">Onaylı</option>
                        <option value="False">Onaylı Değil</option>
                    </select>
                </div>
            </div>
            <div class="form-btn-kaydet-box">
                <button class="form-btn-kaydet" type="submit">Kaydet</button>
            </div>
        </form>
    </div>
</div>