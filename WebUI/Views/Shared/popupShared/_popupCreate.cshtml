@model PopupModel

<div class="title">
    <h2>POPUP EKLE</h2>
</div>
<div class="content">
    <div class="form-container">
        <div class="table-btn-geri-box">
            <a class="table-btn-geri" asp-controller="Popup" asp-action="PopupList">Geri</a>
        </div>
        <form class="form-container-alt" asp-controller="Popup" asp-action="PopupCreate" method="post" enctype="multipart/form-data">
            <div class="form-item-1">
                <span class="validation" asp-validation-for="PopupTitle"></span>
                <label>Ad</label>
                <input asp-for="PopupTitle" type="text">
            </div>
            <div class="form-item-1">
                <span class="validation" asp-validation-for="PopupDescription"></span>
                <label>Açıklama</label>
                <input asp-for="PopupDescription" type="text">
            </div>
            <div class="form-item-1">
                <span class="validation" asp-validation-for="PopupImage"></span>
                <label class="resim-label">Resim <span class="tavsiye">(önerilen boyut: 500 x 500)</span></label>
                <input class="resim-input" asp-for="PopupImage" name="file" type="file">
            </div>
            <div class="form-item-1">
                <span class="validation" asp-validation-for="PopupLink"></span>
                <label>Link</label>
                <input asp-for="PopupLink" type="text">
            </div>
            <div class="form-item-1">
                <label>Sıra Numarası</label>
                <input asp-for="PopupSort" type="text">
            </div>
            <div class="form-item-1">
                <label>Onay Durumu</label>
                <select asp-for="PopupApproval" class="select">
                    <option value="True">Evet</option>
                    <option value="False" selected>Hayır</option>
                </select>
            </div>
            <div class="form-btn-kaydet-box">
                <button class="form-btn-kaydet" type="submit">Kaydet</button>
            </div>
        </form>
    </div>
</div>